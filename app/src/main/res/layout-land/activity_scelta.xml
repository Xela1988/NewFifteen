<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Scelta"
    android:background="@drawable/sfondo05"
    >
    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/gridLayoutSceltaMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:columnCount="3"
        android:rowCount="2"
        android:backgroundTint="@android:color/transparent"
        android:layout_alignWithParentIfMissing="false"
        android:clickable="false"
        android:useDefaultMargins="false"
        android:transitionGroup="false"
        android:touchscreenBlocksFocus="false"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        >
        <!--il tag backgroundTint -->

        <Button
            android:id="@+id/buttonScelta3"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_row="0"
            android:background="@drawable/graybutton00"
            android:text="3*3" />

        <Button
            android:id="@+id/buttonScelta4"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/buttonScelta3"
            android:layout_centerHorizontal="true"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            android:layout_row="0"
            android:background="@drawable/greenbutton00"
            android:text="4*4" />


        <Button
            android:id="@+id/buttonScelta5"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/buttonScelta3"
            android:layout_centerHorizontal="true"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:background="@drawable/yellowbutton00"
            android:text="5*5" />

        <Button
            android:id="@+id/buttonScelta6"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/buttonScelta4"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:layout_toEndOf="@+id/buttonScelta4"
            android:background="@drawable/redbutton00"
            android:text="6*6" />
 </GridLayout>
</RelativeLayout>